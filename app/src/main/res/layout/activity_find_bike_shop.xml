<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context="com.chadcover.bikeridz.FindBikeShopActivity">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/findBikeShopHeader"
      android:textSize="24dp"
      android:textStyle="bold"
      android:layout_marginBottom="15dp"
      android:gravity="center_horizontal"
    />

  <TextView
      android:id="@+id/bikeShopName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="16dp"
  />

  <TextView
      android:id="@+id/bikeShopAddress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="16dp"
  />

  <TextView
      android:id="@+id/bikeShopPhoneNumber"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:autoLink="all"
      android:textSize="16dp"
  />



  <TextView
      android:id="@+id/bikeShopHours"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="16dp"
      />


  <!-- TO DO: Set an on text click listener, launch Map My Route Activity through intent -->
  <TextView
      android:id="@+id/bikeShopMapMyRoute"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="16dp"
      android:text="Map My Route"
  />

  <!-- TO DO: Set an on text click listener, launch Map My Route Activity through intent -->
  <TextView
      android:id="@+id/bikeShopTurnByTurn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="16dp"
      android:text="Turn by Turn Directions"
  />




</LinearLayout>
