<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chadcover.bikeridz.FindBikeShopActivity"
    >

  <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_height="match_parent"
      android:background="?attr/colorPrimary"
      android:layout_width="match_parent"
      android:gravity="top"
      android:layout_marginBottom="15dp"
      >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_nearest_bikeshop"
        android:textSize="24dp"
        android:textStyle="bold"
      />

  </android.support.v7.widget.Toolbar>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:layout_marginLeft="15dp"
    >

  <TextView
      android:id="@+id/bikeShopName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="16dp"
  />

  <TextView
      android:id="@+id/bikeShopAddress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="16dp"
  />

  <TextView
      android:id="@+id/bikeShopPhoneNumber"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:autoLink="all"
      android:textColorLink="@color/webLink"
      android:textSize="16dp"
  />



  <TextView
      android:id="@+id/bikeShopHours"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="16dp"
      />


  <!-- TO DO: Set an on text click listener, launch Map My Route Activity through intent -->
  <TextView
      android:id="@+id/bikeShopMapMyRoute"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="16dp"
      android:textColor="@color/webLink"
      android:onClick="onMapMyRouteClick"
      android:clickable="true"
      android:text="@string/mapMyRideUnderline"
  />

  <!-- TO DO: Set an on text click listener, launch Map My Route Activity through intent -->
  <TextView
      android:id="@+id/bikeShopTurnByTurn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="16dp"
      android:textColor="@color/webLink"
      android:onClick="onTurnByTurnClick"
      android:clickable="true"
      android:text="@string/turnByTurnUnderline"
  />

</LinearLayout>

</android.support.design.widget.CoordinatorLayout>